<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="jp.co.oec_o.oec0155.myjihankia.MainActivity"
    android:orientation="vertical">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="3dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:id="@+id/syashin1"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="7"
                    android:src="@drawable/kinoko2" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="140"
                    android:id="@+id/kakaku1"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:background="@android:color/holo_orange_light"
                    android:textColor="@android:color/black" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:text="しいたけ"
                    android:id="@+id/button"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="2"
                    android:textColor="@android:color/black"
                    android:background="@android:color/darker_gray" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="3dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:id="@+id/syashin2"
                    android:layout_weight="7"
                    android:src="@drawable/kinoko" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="210"
                    android:id="@+id/kakaku2"
                    android:layout_gravity="right"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:background="@android:color/holo_orange_light"
                    android:textColor="@android:color/black" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:text="まいたけ"
                    android:id="@+id/button2"
                    android:layout_weight="2"
                    android:textColor="@android:color/black"
                    android:background="@android:color/darker_gray" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="3dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:id="@+id/syashin3"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="7"
                    android:src="@drawable/kinoko3" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="780"
                    android:id="@+id/kakaku3"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:background="@android:color/black"
                    android:textColor="@android:color/holo_orange_light" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:text="まつたけ"
                    android:id="@+id/button3"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="2"
                    android:background="@android:color/holo_red_dark" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="3dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="取り出し口"
                    android:id="@+id/textView4"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:textColor="@android:color/black"
                    android:background="@android:color/holo_blue_bright" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:id="@+id/toridashiguti"
                    android:layout_weight="8"
                    android:background="@android:color/black" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="3dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="合計金額"
                    android:id="@+id/textView6"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textColor="@android:color/black"
                    android:background="@android:color/holo_green_dark" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:id="@+id/goukeihyouji"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="2"
                    android:background="@color/colorPrimary"
                    android:gravity="center_vertical|end" />

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:layout_margin="3dp"></LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="おつり"
                    android:id="@+id/textView8"
                    android:layout_gravity="right"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textColor="@android:color/black"
                    android:background="@android:color/holo_green_dark" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:id="@+id/oturihyoji"
                    android:layout_gravity="right"
                    android:layout_weight="2"
                    android:background="@color/colorPrimary"
                    android:gravity="center_vertical|end" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="3dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="お金投入口"
                    android:id="@+id/textView5"
                    android:layout_weight="2"
                    android:textColor="@android:color/black"
                    android:gravity="center"
                    android:background="@android:color/holo_blue_bright" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:id="@+id/tonyuguti"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="8"
                    android:background="@android:color/black" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center_horizontal"
        android:layout_weight="2">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/okane500"
            android:src="@drawable/s_500endama"
            android:layout_weight="1" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/okane100"
            android:src="@drawable/s_100endama"
            android:layout_weight="1" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/okane50"
            android:src="@drawable/s_50"
            android:layout_weight="1" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/okane10"
            android:src="@drawable/s_10endama"
            android:layout_weight="1" />

    </LinearLayout>

</LinearLayout>
